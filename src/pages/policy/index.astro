---
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/Navbar.astro';
import Footer from '../../components/Footer.astro';
import Navbar2 from '../../components/Navbar2.astro';

const policyData = [
    {
        title: "Information We Collect",
        content: "We collect personal information that you provide when you interact with our website, such as your name, email address, and payment details. We may also collect non-personal information, like IP addresses and browsing behavior."
    },
    {
        title: "How We Use Your Information",
        content: "We use your information to improve our services, communicate with you, and fulfill legal and contractual obligations. We may also use your data for marketing purposes with your consent."
    },
    {
        title: "Your Rights",
        content: "You have the right to access, correct, or delete your personal information. You can also withdraw your consent to processing at any time."
    }
];
---

<Layout title="Privacy Policy | CX-Point">
    <main class="min-h-screen bg-[#E7E7D6]">
        <Navbar2/>
        
        <div class="container mx-auto px-4 md:px-8 py-16 md:py-24 ">
            <div class="max-w-4xl mx-auto">
                <!-- Header Section -->
                <div class="mb-12 md:mb-16 pt-20">
                    <h1 class="text-4xl md:text-7xl font-bold mb-6 new text-center">Privacy Policy</h1>
                    <p class="text-gray-600 mb-4 lg:mt-20">Effective Date: March 15, 2024</p>
                    <p class="text-lg leading-relaxed">
                        At CXPoint, we value your privacy and are committed to protecting your personal information. 
                        This Privacy Policy explains how we collect, use, and share your personal data when you visit 
                        our website or use our services. By using our website, you consent to the practices described 
                        in this policy.
                    </p>
                </div>

                <!-- Policy Sections -->
                <div class="space-y-8 md:space-y-12 ">
                    {policyData.map((section) => (
                        <div class="policy-section">
                            <h2 class="text-2xl md:text-3xl font-semibold mb-4 new">{section.title}</h2>
                            <p class="text-lg leading-relaxed text-gray-800">{section.content}</p>
                        </div>
                    ))}
                </div>

                <!-- Contact Section -->
                <div class="mt-12">
                    <p class="text-lg text-gray-700">
                        For more information about our privacy practices or to exercise your rights, 
                        please contact us at <a href="mailto:privacy@cxpoint.com" class="text-blue-600 hover:underline">
                        privacy@cxpoint.com</a>
                    </p>
                </div>
            </div>
        </div>

        <Footer />
    </main>
</Layout>

<style>
    .new {
        font-family: "new";
        font-stretch: 520%;
        line-height: 1.2;
    }

    .policy-section {
        padding: 2rem 0;
    }
</style>
