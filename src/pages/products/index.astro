---
const astrix = '/assets/asterisk.png';
import Layout from "../../layouts/Layout.astro";
import StackingCards from '../../components/StackingCards.astro';
import ProductCard from "../../components/ProductCard.astro";
import video from '../../public/assets/heroVideo2.mp4';
import CTAPage from "../../components/CTAPage.astro";
import ProductSections from "../../components/ProductSections.astro";
import Stats from "../../components/Stats.astro";
import Pricing from "../../components/Pricing.astro";
import Navbar from "../../components/Navbar.astro";
import Footer from "../../components/Footer.astro";
import CompareProducts from "../../components/CompareProducts.astro";
---
<Layout title="CX-Point">
<div class="w-full h-full bg-[#FBF8F4] ">
    <Navbar/>
    <div class="w-full h-screen flex flex-col justify-evenly px-20 pt-20">
        <div>
            <div class="w-full flex items-center gap-4">
                <img class="w-[60px] h-[60px] astrix"src={astrix} alt="astrix" />
                <div class="w-full h-full overflow-hidden">
                    <p class="text-[80px] akira animated-text ">Success-Driven Stories</p>
                </div>
            </div>
            <div class="w-full ">
                <div class="w-full h-full overflow-hidden">
                    <p class="text-[80px] akira animated-text"> for Ambitious leaders</p>
                </div>
            </div>
            <div class="w-full h-full overflow-hidden">
                <p class="text-[20px] akira mt-4 animated-text">We design <span class="px-4 py-2 rounded-full border-2 border-black text-black median mx-2">Experiences</span> that transform visions into thriving businesses </p>
            </div>
        </div>
        <div>
            <div class="w-full h-full overflow-hidden flex items-start justify-between gap-10 rounded-2xl  py-5">
                <div class="w-[40%] h-[200px] bg-[#2476FF] rounded-tr-3xl rounded-bl-3xl px-10 animated-text overflow-hidden">
                    <!-- <video autoplay muted loop src={video} class="w-full h-full object-cover scale-150"></video> -->
                     
                </div>
                <div class="w-[60%] h-full flex flex-col justify-between">
                    <div class="w-full h-fulloverflow-hidden ">
                        <p class="median text-right text-[17px] animated-text text-black">
                            At CXpoint, we offer innovative tools designed to enhance customer experience for organizations of all sizes. Our solutions empower businesses to connect more effectively with their customers, fostering loyalty and satisfaction. By streamlining interactions and gathering valuable insights, CXpoint helps you elevate your customer experience to new heights.  
                        </p>
                    </div>
                    <div class="w-full h-full flex items-end justify-end">

                        <p class=" text-[20px] median animated-text flex items-end px-4 py-2 border-2 border-black rounded-full">Learn More</p>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
    <StackingCards />
    <ProductCard />
    <ProductSections/>
    
    <Stats />
    <CompareProducts/>
    <CTAPage />
    <Pricing />
    <Footer/>
</div>
</Layout>


<style>
    .horizontal-animation-item {
        font-family: 'MediaanItalic';
        width: 300px; /* Adjust width */
        height: 400px; /* Adjust height */
        background: #101010; /* Make background transparent */
        border: 0.5px solid #868686; /* Add border */
        color: white; /* Text color */
        display: flex;
        align-items: start;
        padding:8px;
        justify-content: space-between;
        flex-direction: column;
        position: relative; /* For positioning */
        overflow: hidden; /* Hide overflow */
        text-align: center; /* Center text */
    }
    .akira{
        font-family: 'new', sans-serif;
        font-weight: 700;
        font-stretch: 420%;
        line-height: 100%;
    }

    .median{
        font-family: 'MediaanItalic';
        font-weight: 100;
    }

    .animated-text{
        opacity: 1;
    }

    .service-cards {
    display: flex;
    justify-content: center;
    gap: 2rem;
    padding: 2rem;
    background-color: #f0f0f0;
  }

  .card {
    background-color: #1a1a1a;
    color: #ffffff;
    border-radius: 10px;
    padding: 1.5rem;
    width: 300px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    border-top-right-radius: 60px;
  }

  .card h2 {
    font-size: 1.5rem;
    margin-bottom: 1rem;
  }

  .card p {
    font-size: 0.9rem;
    margin-bottom: 1rem;
  }

  .card img {
    width: 100%;
    height: 200px;
    object-fit: cover;
    border-radius: 5px;
  }

  @media (max-width: 768px) {
    .service-cards {
      flex-direction: column;
      align-items: center;
    }

    .card {
      width: 100%;
      max-width: 300px;
    }
  }
</style>

<script>

import { gsap } from 'gsap';
import { ScrollTrigger } from 'gsap/ScrollTrigger';
    gsap.registerPlugin(ScrollTrigger);

    const textElements = document.querySelectorAll('.animated-text');
    gsap.from('.astrix', {
        rotation: 360,
        duration: 4,
        ease: 'linear',
        repeat: -1
    });
    const t1 = gsap.timeline({

    })

    t1.from('.astrix', {
       opacity: 0,
       duration: 0.6,
       delay: 0.6
    })
    t1.from(textElements, {
        opacity: 0,
        y: 50,
        duration: 1,
        ease: "power2.out",
    })


</script>