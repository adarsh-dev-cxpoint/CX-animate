<style>
    .bottomtext {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-around;
    font-family: 'new', sans-serif;
    font-weight: 400;
    font-size: 70px;
    font-stretch: 700%;
    }

    @media (max-width: 768px) {
        .bottomtext {
            font-size: 2rem;
        }
    }

    .bottomtext p {
        line-height: 0.8;
        text-align: center;
        transition: all 0.5s ease;
    }

    .bottomtext span {
        font-family: 'new', sans-serif;
        font-weight: 600;
        font-size: 1.5rem;
        font-stretch: 700%;
        width: 70%;
        text-wrap: balance;
        text-align: center;
        line-height: 1.2;

    }   

    .bottomtext p:hover {
        font-weight: 900;
    }
    .page-container {
    height: 80vh;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-items: center;
    color: black;
    }

    .new{
        font-family: 'new', sans-serif;
        font-weight: 700;
        font-stretch: 500%;
    }
    .horizontal-animation-item {
        font-family: 'MediaanItalic';
        width: 300px; /* Adjust width */
        height: 400px; /* Adjust height */
        background: #101010; /* Make background transparent */
        border: 0.5px solid #868686; /* Add border */
        color: white; /* Text color */
        display: flex;
        align-items: start;
        padding:8px;
        justify-content: space-between;
        flex-direction: column;
        position: relative; /* For positioning */
        overflow: hidden; /* Hide overflow */
        text-align: center; /* Center text */
    }
    .akira{
        font-family: 'new', sans-serif;
        font-weight: 700;
        font-stretch: 420%;
        line-height: 100%;
    }

    .median{
        font-family: 'MediaanItalic';
        font-weight: 100;
    }

    .animated-text{
        opacity: 1;
    }

    .service-cards {
    display: flex;
    justify-content: center;
    gap: 2rem;
    padding: 2rem;
    background-color: #f0f0f0;
  }

  .card-settings {
    background-color: #1a1a1a;
    color: #ffffff;
    border-radius: 10px;
    padding: 1.5rem;
    width:100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    border-top-right-radius: 60px;
  }

  .card-settings h2 {
    font-size: 1.5rem;
    margin-bottom: 1rem;
  }

  .card-settings p {
    font-size: 0.9rem;
    margin-bottom: 1rem;
  }

  .card-settings img {
    width: 100%;
    height: 200px;
    object-fit: cover;
    border-radius: 5px;
  }

  @media (max-width: 768px) {
    .service-cards {
      flex-direction: column;
      align-items: center;
    }

    .card {
      width: 100%;
      max-width: 300px;
    }
  }

  #video-container {
    cursor: pointer;
    transform-origin: left center;
    will-change: transform, width;
  }
</style>

<script>

import { gsap } from 'gsap';
import { ScrollTrigger } from 'gsap/ScrollTrigger';
    gsap.registerPlugin(ScrollTrigger);

    const textElements = document.querySelectorAll('.animated-text');
    gsap.from('.astrix', {
        rotation: 360,
        duration: 4,
        ease: 'linear',
        repeat: -1
    });
    const t1 = gsap.timeline({

    })

    // t1.from('.astrix', {
    //    opacity: 0,
    //    duration: 0.6,
    //    delay: 0.6
    // })
    t1.from(textElements, {
        x: -850,
        duration: 1,
        ease: "power2.out",
        stagger: 0.2
    })

    t1.from(".dash" ,{
        opacity: 0,
        delay: 0.2
    },"anim")

    t1.from(".subtext",{
        opacity: 0,
        duration: 0.8,
        x: -100,
        ease: "power2.out"
    },"anim")

    t1.from("#video-container",{
        duration: 0.8,
        x: 100,
        opacity: 0,
        ease: "power2.out"
    },"anim")

    // t1.to(".dash",{
    //     width:200,
    //     duration: 2.5,
    //     yoyo: true,
    //     repeat: -1,
    //     ease: "power2.inOut"
    // })


    const t2 = gsap.timeline({
        scrollTrigger: {
            trigger: "#cta",
            start: "top 70%",
            end: "bottom bottom",
            markers: true

        }
    });

    // First animation: move from bottom to top
    t2.fromTo(".astrix", {
        y: 50, // Start from below
        opacity: 0
    }, {
        y: 0, // Move to the original position
        opacity: 1,
        duration: 1
    });

    const updateAstrixAnimation = () => {
        t2.to(".astrix", {
            x: window.innerWidth < 768 ? 130 : 550,
            duration: 1,
            rotate: 360,
            ease: 'ease-in-out',
        });
    };

    // Initial setup
    updateAstrixAnimation();

    // Update on window resize
    window.addEventListener('resize', updateAstrixAnimation);

</script>