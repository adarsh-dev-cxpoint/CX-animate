---
import Layout from '../../layouts/Layout.astro';
import Navbar2 from '../../components/Navbar2.astro';
import Footer from '../../components/Footer.astro';

const termsData = [
    {
        title: "Acceptance of Terms",
        content: "By using this website, you confirm that you accept these Terms of Service. If you do not agree with these terms, please do not use the website."
    },
    {
        title: "Services We Provide",
        content: "We offer a variety of services, including consulting, experience design, and digital transformation solutions. Our services are available to both individuals and businesses who agree to comply with these Terms."
    },
    {
        title: "User Responsibilities",
        content: "As a user of our website and services, you agree to: Provide accurate and complete information when using our services. Use the website and services for lawful purposes only. Not engage in any activity that could damage or interfere with the website's functionality. Be responsible for all content you upload, submit, or transmit through our services."
    },
    {
        title: "Account Termination",
        content: "We reserve the right to suspend or terminate your account if we determine that you have violated these Terms. In case of termination, your access to certain services may be revoked."
    },
    {
        title: "Limitation of Liability",
        content: "While we strive to provide accurate and reliable services, CXPoint cannot guarantee the availability, accuracy, or security of the website. We will not be liable for any indirect, incidental, or consequential damages arising from the use of our services."
    },
    {
        title: "Governing Law",
        content: "These Terms shall be governed by and construed in accordance with the laws of the jurisdiction in which CXPoint operates."
    }
];
---

<Layout title="Terms of Service | CX-Point">
    <main class="min-h-screen bg-[#E7E7D6]">
        <Navbar2/>
        
        <div class="container mx-auto px-4 md:px-8 py-16 md:py-24">
            <div class="max-w-4xl mx-auto">
                <!-- Header Section -->
                <div class="mb-12 md:mb-16 pt-20">
                    <h1 class="text-4xl md:text-7xl font-bold mb-6 new text-center">Terms of Service</h1>
                    <p class="text-gray-600 mb-4 lg:mt-20">Last Updated: March 15, 2024</p>
                    <p class="text-lg leading-relaxed">
                        These Terms of Service ("Terms") govern your use of the CXPoint website and services. 
                        By accessing or using our website, you agree to be bound by these Terms. Please read 
                        these Terms carefully before proceeding to use our services.
                    </p>
                </div>

                <!-- Terms Sections -->
                <div class="space-y-8 md:space-y-12">
                    {termsData.map((section) => (
                        <div class="terms-section">
                            <h2 class="text-2xl md:text-3xl font-semibold mb-4 new">{section.title}</h2>
                            <p class="text-lg leading-relaxed text-gray-800">{section.content}</p>
                        </div>
                    ))}
                </div>

                <!-- Contact Section -->
                <div class="mt-12">
                    <p class="text-lg text-gray-700">
                        If you have any questions about these Terms of Service, please contact us at 
                        <a href="mailto:legal@cxpoint.com" class="text-blue-600 hover:underline">
                        legal@cxpoint.com</a>
                    </p>
                </div>
            </div>
        </div>

        <Footer />
    </main>
</Layout>

<style>
    .new {
        font-family: "new";
        font-stretch: 520%;
        line-height: 1.2;
    }

    .terms-section {
        padding: 2rem 0;
    }
</style>
