<style>
    .font-new{
        font-family: 'new';
    }

    .statistics{
        font-stretch: 300%;
        font-weight: 900;
        font-size: 24rem;
        line-height: 100%;
        color: #E7E7D6;
    }

    @media (max-width: 768px) {
        .statistics{
            font-size: 18rem;
        }
    }

    .company{
        font-size: 32rem;
        font-stretch: 400%;
        font-weight: 900;
    }

    @media (max-width: 768px) {
        .company{
            font-size: 5rem;
        }
    }

</style>

<script>
    gsap.registerPlugin(ScrollTrigger);

    const child_containers = document.querySelectorAll(".child_container");

    // Stagger scale to 0 animation for child_containers
    gsap.to(child_containers, {
        scrollTrigger: {
            trigger: ".main_container",
            start: "top top",
            end: "bottom+=10% top",
            pin: true, // Pin the main_container
            scrub: 2,
        },
        scale: 0,
        stagger: 4, // Stagger the animation by 0.2 seconds
        ease: "power1.inOut",
        duration: 1 // Duration of the scale animation
    });

    gsap.to(".astrix-clock", {
        rotate: 360,
        ease: "none",
        duration: 10,
        repeat: -1
    })

</script>