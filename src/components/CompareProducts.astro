---
const features1 = [
    "SCXML/ VXML File upload to and from workspace",
    "Flow Summary generation",
    "Audio file transcription and playback",
    "Notification for Upgrade",
    "CSV"
];

const features2 = [
    "User Management",
    "Role Management",
    "Division Management",
    "Queue Management",
    "Skill Management",
    "Language Management",
    "Call Routing Management",
    "Emergency Groups Management",
    "Schedule Management",
    "Prompts Management",
];

const features3 = [
    "AD based authentication",
    "GDPR compliant",
    "Supports integration with Leading contact centers",
    "Role based access",
    "End to End encryption",
    "Raise support tickets",
    "Platform Uptime status and monitoring"
];

// Add descriptions for each quarter
const descriptions = {
    voyage: "Streamline your workflow with comprehensive file management and analysis tools designed for optimal performance.",
    nexa: "Experience real-time monitoring and secure automation with our advanced integration capabilities.",
    enterprise: "Scale your operations with enterprise-grade features and collaborative tools built for teams.",
    contact: "Get in touch with our sales team for custom solutions tailored to your needs."
};
---


<div class="quarter-container">
    <div class="quarter">
        <div class="top-image"></div>
        <div class="bottom-image"></div>
        <div class="content">
            <div class="header-wrapper">
                <svg class="rotating-asterisk" width="31" height="31" viewBox="0 0 31 31" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M12.311 30.7873V21.195L3.95649 25.9911L0.862207 20.6535L9.21676 15.8574L0.862207 11.0612L3.95649 5.64626L12.311 10.4424V0.850127H18.577V10.4424L26.8541 5.64626L30.0258 11.0612L21.6712 15.8574L30.0258 20.6535L26.8541 25.9911L18.577 21.2724V30.7873H12.311Z" fill="#FF6D00"/>
                </svg>
                <h2>VOYAGE</h2>
            </div>
            <p class="description">{descriptions.voyage}</p>
            <ul class="feature-list">
                {features1.map(feature => (
                    <li>{feature}</li>
                ))}
            </ul>
        </div>
    </div>
    <div class="quarter">
        <div class="top-image"></div>
        <div class="bottom-image"></div>
        <div class="content">
            <div class="header-wrapper">
                <svg class="rotating-asterisk" width="31" height="31" viewBox="0 0 31 31" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M12.311 30.7873V21.195L3.95649 25.9911L0.862207 20.6535L9.21676 15.8574L0.862207 11.0612L3.95649 5.64626L12.311 10.4424V0.850127H18.577V10.4424L26.8541 5.64626L30.0258 11.0612L21.6712 15.8574L30.0258 20.6535L26.8541 25.9911L18.577 21.2724V30.7873H12.311Z" fill="#FF6D00"/>
                </svg>
                <h2>NEXA</h2>
            </div>
            <p class="description">{descriptions.nexa}</p>
            <ul class="feature-list">
                {features2.map(feature => (
                    <li>{feature}</li>
                ))}
            </ul>
        </div>
    </div>
    <div class="quarter">
        <div class="top-image"></div>
        <div class="bottom-image"></div>
        <div class="content">
            <h2>Common Features</h2>
            <p class="description">{descriptions.enterprise}</p>
            <ul class="feature-list" style="list-style:circle">
                {features3.map(feature => (
                    <li>{feature}</li>
                ))}
            </ul>
        </div>
    </div>
    <div class="quarter">
        <div class="top-image"></div>
        <div class="bottom-image"></div>
        <div class="content">
            <h2>Contact Sales</h2>
            <p class="description">{descriptions.contact}</p>
            <button class="contact-btn">Contact Us</button>
        </div>
    </div>
</div>

<style>
    .quarter-container {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1rem;
        padding: 2rem 15%;
        width: 100%;
        min-height: 800px;
        background-color: #E7E7D6;
    }

    .quarter {
        min-height: 350px;
        opacity: 1;
        padding: 2.5rem;
        background-color: #1E1E1D;
        border-top-left-radius: 50px;
        border-top-right-radius: 50px;
        border-bottom-left-radius: 50px;
        display: flex;
        flex-direction: column;
        gap: 2rem;
        position: relative;
        overflow: hidden;
    }

    .quarter::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 150px;
        background: linear-gradient(to bottom, 
            rgba(0, 0, 0, 0.6) 0%,
            rgba(0, 0, 0, 0.3) 50%,
            rgba(30, 30, 29, 1) 100%
        );
        z-index: 1;
    }

    .quarter .top-image {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 150px;
        background-size: cover;
        background-position: center;
        opacity: 0.4;
    }

    .quarter:nth-child(1) .top-image {
        background-image: url('/assets/Mockup-1.jpg');
    }

    .quarter:nth-child(2) .top-image {
        background-image: url('/assets/Mockup-4.jpg');
    }

    .quarter:nth-child(3) .top-image {
        background-image: url('/assets/Mockup-5.jpg');
    }

    .quarter:nth-child(4) .top-image {
        background-image: url('/assets/Mockup-9.jpg');
    }

    .quarter::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        height: 200px;
        background: linear-gradient(to top, 
            rgba(0, 0, 0, 0.6) 0%,
            rgba(0, 0, 0, 0.3) 50%,
            rgba(30, 30, 29, 1) 100%
        );
        z-index: 1;
    }

    .quarter .bottom-image {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        height: 200px;
        background-size: cover;
        background-position: center;
        opacity: 0.3;
        z-index: 0;
    }

    .quarter:nth-child(1) .bottom-image {
        background-image: url('/assets/Mockup-4.jpg');
    }

    .quarter:nth-child(2) .bottom-image {
        background-image: url('/assets/Mockup-5.jpg');
    }

    .quarter:nth-child(3) .bottom-image {
        background-image: url('/assets/Mockup-9.jpg');
    }

    .quarter:nth-child(4) .bottom-image {
        background-image: url('/assets/Mockup-1.jpg');
    }

    .content {
        position: relative;
        z-index: 2;
        color: white;
        height: 100%;
        display: flex;
        flex-direction: column;
        gap: 2rem;
    }

    .content h2 {
        font-size: 1.5rem;
        font-weight: 600;
        color: white;
        margin: 0;
    }

    .description {
        font-size: 0.95rem;
        line-height: 1.6;
        color: white;
        opacity: 0.9;
        margin: 0;
    }

    .feature-list {
        list-style: none;
        padding: 0;
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        margin-top: 1rem;
    }

    .feature-list li {
        display: flex;
        align-items: center;
        font-size: 0.95rem;
        color: white;
        padding-left: 1.5rem;
        position: relative;
    }

    .feature-list li::before {
        content: '';
        position: absolute;
        left: 0;
        top: 50%;
        transform: translateY(-50%);
        width: 16px;
        height: 16px;
        background: white;
        border-radius: 50%;
    }

    .feature-list li::after {
        content: '';
        position: absolute;
        left: 5px;
        top: calc(50% - 2px);
        transform: translateY(-50%) rotate(45deg);
        width: 4px;
        height:auto;
        border-right: 1.5px solid #1E1E1D;
        border-bottom: 1.5px solid #1E1E1D;
    }

    .check-icon {
        width: 1.25rem;
        height: 1.25rem;
    }

    .contact-text {
        font-size: 1.2rem;
        line-height: 1.6;
        margin: 1rem 0;
    }

    .contact-btn {
        background: white;
        color: #ff1515;
        padding: 0.75rem 1.5rem;
        border-radius: 50px;
        font-weight: bold;
        transition: all 0.3s ease;
        margin-top: auto;
        align-self: center;
    }

    .contact-btn:hover {
        transform: scale(1.05);
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    }

    @media (max-width: 1024px) {
        .quarter-container {
            grid-template-columns: 1fr;
            padding: 2rem 5%;
            min-height: auto;
        }

        .quarter {
            height: 350px;
        }
    }

    @media (max-width: 640px) {
        .quarter-container {
            padding: 1rem;
            gap: 0.75rem;
        }

        .content h2 {
            font-size: 1.5rem;
        }

        .feature-list li {
            font-size: 1rem;
        }
    }

    .header-wrapper {
        display: flex;
        align-items: center;
        gap: 0.4rem;
    }

    .rotating-asterisk {
        width: 24px;
        height: 24px;
        fill: white;
    }
</style>


<script>
    import gsap from 'gsap';
    
    // Set up the rotation animation for all asterisks
    const asterisks = document.querySelectorAll('.rotating-asterisk');
    asterisks.forEach(asterisk => {
      gsap.to(asterisk, {
        rotation: 360,
        duration: 8,
        repeat: -1,
        ease: "none"
      });
    });
  </script>